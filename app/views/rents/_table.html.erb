<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Klient</th>
        <th>Samochód</th>
        <th>Data wypożyczenia</th>
        <th>Data zwrotu</th>
      </tr>
    </thead>
  
    <tbody>
      <% rents.each_with_index do |rent, index| %>
  
        <%= content_tag "tr", :class => index.even? ? "even-class" : "odd-class" do %>
    
          <td><%= rent.client.full_name %></td>
          <td><%= rent.auto.name %></td>
          <td><%= rent.date_start %></td>
          <td><%= rent.date_end %></td>
          <td><%= link_to "Edytuj " , edit_rent_path(rent) %></td>
          <td><%= link_to "Usuń" , rent, method: :delete, data: { confirm: "Czy na pewno  usunać   zdarzenie?", remote: true }  %></td>
          </tr>  
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
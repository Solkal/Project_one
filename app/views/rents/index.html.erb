<h1>Wypożyczone samochody:</h1>

<table>
  <thead>
    <tr>
      <th>Klient_ID</th>
      <th>Samochód_ID</th>
      <th>Data wypożyczenia</th>
      <th>Data zwrotu</th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each_with_index do |rent, index| %>

      <%= content_tag "tr", :class => index.even? ? "even-class" : "odd-class" do %>

        <td><%= rent.client_id %></td>
        <td><%= rent.auto_id %></td>
        <td><%= rent.date_start %></td>
        <td><%= rent.date_end %></td>
        <td><%= link_to "Edytuj " , edit_rent_path(rent) %></td>
        <td><%= link_to "Usuń" , rent, method: :delete, data: { confirm: "Czy na pewno usunać zdarzenie?" }  %></td>
      </tr>  
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to 'Wypożycz!', new_rent_path %>